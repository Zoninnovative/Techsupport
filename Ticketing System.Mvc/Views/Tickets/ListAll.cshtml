@model Ticketing_System.Core.CreateTaskDTO
@{
  
}
 <!-- DataTables CSS -->
<link href="../bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet">
<!-- DataTables Responsive CSS -->
<link href="../bower_components/datatables-responsive/css/dataTables.responsive.css" rel="stylesheet">
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/PageLevel Scripts/Tasks.js"></script>
<div id="page-wrapper">
    <br />
    <div class="row">
            <div class="col-md-2">
                @Html.ActionLink("Create New", "Create", null, new {@class="btn btn-info" })
    </div>
        <div class="col-md-2">
            @Html.DropDownList("ddlproject", (IEnumerable<SelectListItem>)Model.ProjectsDDL, new { @class = "form-control" })
            </div>
        <div class="col-md-2">
            @Html.DropDownList("ddlpriority", (IEnumerable<SelectListItem>)Model.PriorityDDL, new { @class = "form-control" })
        </div>
        <div class="col-md-2">
            @Html.DropDownList("ddltasktype", (IEnumerable<SelectListItem>)Model.TypeDDL, new { @class = "form-control" })
        </div>
        <div class="col-md-2">
            @Html.DropDownList("ddltaskstatus", (IEnumerable<SelectListItem>)Model.TaskStatusDDl, new { @class = "form-control" })
        </div>
        <div class="col-md-2">
            <input type="button" id="btnFilterTasks" class="btn btn-info" value="Filter Tasks" />

        </div>
        </div>
    
    <div class="row">
        <div class="col-lg-12">
           
            <div class="panel-body">
                <div class="row text-info">
                    @if (ViewBag.Message != null)
                    {
                        <label>@ViewBag.Message</label>
                    }
                </div>
 

                <div class="dataTable_wrapper">
                    <table id="dataTables-example" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="dataTables-example_info">
                        <thead>
                            <th>
                                Task ID
                            </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Assigned Date
                        </th>
                        <th>
                            Priority
                        </th>
                        <th>
                          Task  Status
                        </th>
                        <th>
                            Task  Type
                        </th>
                        <th>Assigned To</th>
                        <th></th>
                        </thead>

                        @foreach (var item in Model.TasksDTO)
                        {
                            <tr>
                                <td>

                                    @item.TaskDisplayName
                                </td>
                                <td>

                                  @item.Title
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.AssigndedDate
                                </td>
                                <td>
                                    @item.PriorityName
                                </td>
                                <td>
                                    @item.Task_Status_Name
                                </td>
                                <td>
                                    @item.Task_Type_Name
                                </td>
                                <td>
                                    @item.AssignedToName
                                </td>
                                <td>
                                    @Html.ActionLink("View", "Edit", new { ticketid = item.ID }, new { @class = "btn btn-info btn-block" }) 
                                    @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- jQuery -->
<script src="../bower_components/jquery/dist/jquery.min.js"></script>



<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });

    });
</script>