@model IEnumerable<Ticketing_System.Core.UserDTO>
    @{

    }

    <!-- DataTables CSS -->
    <link href="../bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="../bower_components/datatables-responsive/css/dataTables.responsive.css" rel="stylesheet">
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/PageLevel Scripts/Users.js"></script>
    <div id="page-wrapper">
        <br />
        <div class="row">
            <div class="col-md-4">
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
            </div>
            <div class="col-md-3 pull-right">
                @Html.DropDownList("ddlrole", (IEnumerable<SelectListItem>)ViewBag.Roles, new { @class = "form-control" })<br />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel-body">
                    <div class="row text-info">
                        @if (ViewBag.Message != null)
                        {
                            <label>@ViewBag.Message</label>
                        }
                    </div>
                    <div class="dataTable_wrapper">
                        <table id="dataTables-example" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>
                                        First Name
                                    </th>
                                    <th>
                                        Last Name
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Mobile Number
                                    </th>
                                    @*<th>Role</th>*@
                                    @*<th>Created By</th>*@
                                    <th></th>
                                    <th colspan=2></th>

                                </tr>
                            </thead>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MobileNumber)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.RoleName)
                                        </td>*@
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.CreatedBy)
                                        </td>*@
                                    <td>

                                        @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-info btn-block" })
                                    </td>
                                    <td>

                                        @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                                        @Html.ActionLink("Edit", "EditUser", new { id = item.Id }, new { @class = "btn btn-info btn-block" })
                                    </td>

                                </tr>
                            }

                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- jQuery -->
    <script src="../bower_components/jquery/dist/jquery.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>

