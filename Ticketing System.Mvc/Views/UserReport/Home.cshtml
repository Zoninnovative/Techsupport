@model Ticketing_System.Mvc.Models.ReportsModel

@{

}

<!-- DataTables CSS -->
<link href="../bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet">
<!-- DataTables Responsive CSS -->
<link href="../bower_components/datatables-responsive/css/dataTables.responsive.css" rel="stylesheet">
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/PageLevel Scripts/UserReport.js"></script>

<div id="page-wrapper">
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="well">
                <div class="row">
                    <div class="col-md-4">

                        @Html.DropDownListFor(model => model.UserID, Model.ProjectsDDl, new { @class = "form-control btngeneratereport" })


                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.FromDate, new { @class = "form-control btngeneratereport", placeholder = "From date" })
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.ToDate, new { @class = "form-control btngeneratereport", placeholder = "To date" })
                    </div>

                    <div class="col-md-2">
                        @Html.DropDownListFor(model => model.TaskTypeID, Model.TaskTypeDDl, new { @class = "form-control btngeneratereport" })
                    </div>
                    <div class="col-md-2">
                        @Html.DropDownListFor(model => model.TaskStatusID, Model.TaskStatusDDl, new { @class = "form-control btngeneratereport" })
                    </div>
                </div><br />
                <div class="row">




                    <div class="col-md-12 text-center">

                        <button class="btn btn-primary" id="btndownloadreport"><i class="fa fa-download"></i> Download</button>
                        <button type="button" class="btn btn-primary" id="btnemailreport"><i class="fa fa-mail-forward"></i> Email Report</button>
                        <label id="lblreporterrormessage" class="text-warning"> </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel-body">
                    <div class="row text-info">
                        @if (ViewBag.Message != null)
                        {
                            <label>@ViewBag.Message</label>
                        }
                    </div>
                    <div class="dataTable_wrapper">
                        <table id="dataTables-example" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="dataTables-example_info">
                            <thead>
                            <th>
                                Project Name
                            </th>
                            <th>
                                Ticket ID
                            </th>
                            <th>
                                Assigned Date
                            </th>
                            <th>
                                Assigned To
                            </th>

                            <th>Task Status</th>
                            <th>Task Type</th>
                            </thead>

                            @foreach (var item in Model.ReportData)
                            {
                                <tr>
                                    <td>

                                        @item.ProjectName
                                    </td>
                                    <td>
                                        @item.TicketDisplayName
                                    </td>
                                    <td>
                                        @item.AssignedDate
                                    </td>
                                    <td>
                                        @item.AssignedTo
                                    </td>

                                    <td>
                                        @item.TaskStatus
                                    </td>
                                    <td>
                                        @item.TicketType
                                    </td>

                                </tr>
                            }

                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- jQuery -->
    <script src="../bower_components/jquery/dist/jquery.min.js"></script>

    <script src="~/Scripts/bootstrap-datepicker.js"></script>

    <script src="../bower_components/jquery/dist/jquery.min.js"></script>
    <script src="../Content/tableExport.js"></script> @*Main file which does export feature *@
    <script src="../Content/jquery.base64.js"></script> @*Main file which does convert the content to base64  *@
    <script src="../Content/html2canvas.js"></script> @*Main file which does export to image feature *@
    <script src="../Content/jspdf/libs/base64.js"></script> @*Main file which does  convert the content to base64 for pdf *@
    <script src="../Content/jspdf/libs/sprintf.js"></script> @*Main file which does export feature for pdf *@
    <script src="../Content/jspdf/jspdf.js"></script> @*Main file which does export feature for pdf *@
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
