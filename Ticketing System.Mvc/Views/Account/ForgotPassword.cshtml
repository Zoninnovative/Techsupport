
@{
    ViewBag.Title = "Login";
    Layout = null;
}


<link href="~/bower_components/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<link href="~/Login Css/Style.css" rel="stylesheet" />

<div class="wrapper">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        {
            <div class="form-signin">
              <center> <h3 class="form-signin-heading">Reset Password</h3></center><hr />
              <center><b>Provide Your Registered Email Address</b></center> <br />
                @Html.TextBox("txtemail", "",new { @class = "form-control" })<br />
                <button class="btn btn-lg btn-primary btn-block" type="submit">Send Activation Link</button><hr />
               @if (ViewBag.Message != null)
               {
                <div class="text-center">  @ViewBag.Message</div>

               }
                 <div class="text-center">   @Html.ActionLink("Back to Login", "Login", null, new { @class = "text-center" })            </div>
            </div>
        }
    }
</div>